<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="config_tab" translate="label" sortOrder="1000">
            <label>Atoon</label>
        </tab>
        <section id="frontend_section" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Frontend Text Configuration</label>
            <tab>config_tab</tab>
            <resource>Atoon_Configuration::config</resource>
            <group id="checkout_group" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Checkout Text</label>

                <field id="frontend_text" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>message to display in checkout page</label>
                </field>
            </group>
        </section>
    </system>
</config>
